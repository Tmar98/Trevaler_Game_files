<Window x:Class="Trevaler_Game_files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trevaler_Game_files"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label>Имя:</Label>
            <TextBlock x:Name="Hero_Name"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Label>Имя:</Label>
            <TextBlock x:Name="Monster_Name"></TextBlock>
        </StackPanel>

        <Button x:Name="Hero_Atack" Grid.Row="1" Click="Hero_Atack_Click">Атака</Button>
        <Button x:Name="Monster_Atack" Grid.Row="1" Grid.Column="1" IsEnabled="False" Click="Monster_Atack_Click">Атака</Button>
        
    </Grid>
</Window>
